<Window x:Class="ShopApp_4ISIP322.ProductsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ShopApp_4ISIP322"
        mc:Ignorable="d"
        Title="ProductsWindow" Height="450" Width="800">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Форма добавления/редактирования -->
        <GroupBox Grid.Row="0" Header="Данные товара" Margin="0,0,0,10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBox x:Name="txtProductName" Grid.Column="0" Margin="5"/>
                <ComboBox x:Name="cmbCategory" Grid.Column="1" Margin="5" DisplayMemberPath="CategoryName"/>
                <TextBox x:Name="txtPrice" Grid.Column="2" Margin="5" />
                <TextBox x:Name="txtQuantity" Grid.Column="3" Margin="5" />

                <StackPanel Grid.Column="4" Orientation="Horizontal">
                    <Button x:Name="btnAdd" Content="Добавить" Margin="5" Click="btnAdd_Click"/>
                    <Button x:Name="btnUpdate" Content="Обновить" Margin="5" Click="btnUpdate_Click"/>
                    <Button x:Name="btnDelete" Content="Удалить" Margin="5" Click="btnDelete_Click"/>
                </StackPanel>
            </Grid>
        </GroupBox>

        <!-- Список товаров -->
        <DataGrid x:Name="dgProducts" Grid.Row="1" AutoGenerateColumns="False" 
                  SelectionChanged="dgProducts_SelectionChanged">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding ProductID}" Width="50"/>
                <DataGridTextColumn Header="Название" Binding="{Binding Name}" Width="*"/>
                <DataGridTextColumn Header="Категория" Binding="{Binding Category1.CategoryName}" Width="*"/>
                <DataGridTextColumn Header="Цена" Binding="{Binding Price}" Width="100"/>
                <DataGridTextColumn Header="Количество" Binding="{Binding Quantity}" Width="100"/>
            </DataGrid.Columns>
        </DataGrid>

        <Button Grid.Row="2" Content="Закрыть" Width="100" HorizontalAlignment="Right" 
                Margin="0,10,0,0" Click="btnClose_Click"/>
    </Grid>
</Window>