<Window x:Class="ShopApp_4ISIP322.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ShopApp_4ISIP322"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="Система учёта товаров" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center"/>

            <Button x:Name="btnProducts" Content="Модуль товаров" Width="200" Height="40" Click="btnProducts_Click"/>
            <Button x:Name="btnStatistics" Content="Модуль статистики" Width="200" Height="40" Click="btnStatistics_Click"/>
            <Button x:Name="btnSearch" Content="Модуль поиска" Width="200" Height="40" Click="btnSearch_Click"/>
        </StackPanel>
    </Grid>
</Window>
