<Window x:Class="ShopApp_4ISIP322.StatisticsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ShopApp_4ISIP322"
        mc:Ignorable="d"
        Title="StatisticsWindow" Height="400" Width="500">
    <Grid Margin="10">
        <StackPanel>
            <TextBlock Text="Статистика товаров" FontSize="20" FontWeight="Bold"/>

            <GroupBox Header="Общая статистика">
                <StackPanel>
                    <TextBlock x:Name="txtTotalProducts" FontSize="14" Margin="5"/>
                    <TextBlock x:Name="txtTotalValue" FontSize="14" Margin="5"/>
                </StackPanel>
            </GroupBox>

            <GroupBox Header="Средние цены по категориям">
                <DataGrid x:Name="dgCategoryStats" AutoGenerateColumns="False" Height="150">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Категория" Binding="{Binding Key}" Width="*"/>
                        <DataGridTextColumn Header="Средняя цена" Binding="{Binding Value}" Width="*"/>
                    </DataGrid.Columns>
                </DataGrid>
            </GroupBox>

            <Button Content="Обновить статистику" Click="btnRefresh_Click" Width="120"/>
            <Button Content="Закрыть" Click="btnClose_Click" Width="100"/>
        </StackPanel>
    </Grid>
</Window>
